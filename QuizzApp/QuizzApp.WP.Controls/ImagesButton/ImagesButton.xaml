<UserControl x:Class="QuizzApp.WP.Controls.ImagesButton"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"   
    d:DesignHeight="480" d:DesignWidth="480" MouseEnter="ImageView_MouseEnter" MouseLeave="ImageView_MouseLeave">

    <Grid x:Name="LayoutRoot" Background="Transparent">
        <Image Name="ImageView" MouseLeftButtonDown="ImageView_MouseLeftButtonDown" MouseLeftButtonUp="ImageView_MouseLeftButtonUp" MouseLeave="ImageView_MouseLeave" Tap="ImageView_Tap"  />
        <TextBlock Name="ButtonTextTextBlock" Text="" HorizontalAlignment="Center" VerticalAlignment="Center"></TextBlock>
    </Grid>
</UserControl>