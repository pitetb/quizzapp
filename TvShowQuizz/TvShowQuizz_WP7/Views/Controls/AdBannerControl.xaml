<UserControl x:Class="TvShowQuizz.Views.Controls.AdBannerControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
     d:DesignHeight="50" d:DesignWidth="320">

    <Grid Name="LayoutRoot" Background="Transparent"  DataContext="{Binding Source={StaticResource ControlsLocator}, Path=AdBannerControlViewModel}">
        <Image Grid.Row="1" Source="{Binding DataContext.BannerPicture, ElementName=LayoutRoot}"                              
               />
    </Grid>
</UserControl>